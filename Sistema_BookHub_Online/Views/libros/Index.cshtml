            <th>
                @Html.DisplayNameFor(model => model.id_Editorial)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.año_publicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ejemplares)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_Editorial)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_Libros">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_Libros">Details</a> |
