<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema_BookHub_Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema_BookHub_Online.styles.css" asp-append-version="true" />
    <style>
        body.page-background {
            background-color: #fffccc; /* Lighter yellow color */
            padding: 20px;
            margin: 0;
        }

        .card-custom {
            background-color: #F8EFB2;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            margin: 10px;
        }

            .card-custom .btn-prestar {
                background-color: #000;
                color: #fff;
                margin-top: 10px;
            }

            .card-custom .sucursal-name {
                margin-top: 10px;
                font-weight: bold;
            }

        .navbar-nav {
            flex-direction: row;
        }

            .navbar-nav .nav-item {
                padding-left: 10px;
                padding-right: 10px;
            }

        .navbar-brand {
            flex: 1;
            text-align: center;
        }

        .search-bar {
            flex: 1;
        }

            .search-bar input {
                width: 100%;
            }
    </style>
</head>
<body class="page-background">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex">
                <form class="search-bar d-flex" role="search" method="get" asp-action="SearchByTitle">
                    <input class="form-control me-2" type="search" name="searchQuery" placeholder="Buscar por título" aria-label="Buscar">
                    <button class="btn btn-outline-success" type="submit">Buscar</button>
                </form>
                <a class="navbar-brand mx-auto" href="#">BookHub</a>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <form asp-controller="Home" asp-action="GotoSucursales">
                            <button type="submit" class="btn btn-black">Sucursales</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Sistema_BookHub_Online - <a href="#">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
